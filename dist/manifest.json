{
	"manifest_version": 3,
	"name": "Yahoo Fantasy Basketball - Start Active Players",
	"version": "1.0.1",
	"description": "Automatically start active players for the rest of the week in Yahoo Fantasy Basketball",
	"permissions": ["tabs"],
	"host_permissions": [
		"https://basketball.fantasysports.yahoo.com/*",
		"https://fantasysports.yahoo.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Start Active Players"
	},
	"content_scripts": [
		{
			"matches": [
				"https://basketball.fantasysports.yahoo.com/*",
				"https://fantasysports.yahoo.com/*"
			],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
